generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id        String    @id @default(uuid())
  name      String?
  email     String    @unique
  image     String?
  password  String
  role      UserRole  @default(USER)
  createdAT DateTime  @default(now())
  updatedAT DateTime  @updatedAt
  problems  Problem[]
}

model Problem {
  id                String     @id @default(uuid())
  title             String
  description       String
  difficulty        Difficulty
  tags              String[]
  userId            String
  examples          String
  constraints       String
  hints             String?
  editorial         String?
  testcases         Json
  codeSnippets      Json
  refernceSolutions Json
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
